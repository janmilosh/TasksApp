.row
  .col-md-8.col-xs-12.center-block

    .panel.panel-success
      .panel-heading
        Task:

      %table.table
        %tr
          %th Description
          %th.completed-column Completed
          %th.icon
       
        %tr
          %td= @task.description
          %td.completed-column
            - if @task.completed
              %i{class: 'glyphicon glyphicon-ok completed', data: {completed: 'true', id: @task.id}}
            - else
              %i{class: 'glyphicon glyphicon-ok not-completed', data: {completed: 'false', id: @task.id}}
          %td.icon
            = link_to edit_task_path(@task) do
              %i.glyphicon.glyphicon-pencil
